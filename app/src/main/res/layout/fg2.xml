                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP"
                android:textColor="@color/black"
                android:textSize="12.5sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/Refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刷新"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


